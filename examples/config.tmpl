# Application Configuration
# Generated from template using tmpltool

[server]
host = {{ SERVER_HOST }}
port = {{ SERVER_PORT }}

[database]
url = {{ DATABASE_URL }}
max_connections = {{ DB_MAX_CONNECTIONS }}

[logging]
level = {{ LOG_LEVEL }}
{% if DEBUG %}
debug = true
verbose = true
{% else %}
debug = false
verbose = false
{% endif %}

[environment]
env = {{ APP_ENV }}
version = {{ APP_VERSION }}
