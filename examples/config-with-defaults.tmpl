# Application Configuration
# Generated from template using tmpltool with env() function

[server]
host = {{ env(name="SERVER_HOST", default="localhost") }}
port = {{ env(name="SERVER_PORT", default="8080") }}

[database]
url = {{ env(name="DATABASE_URL", default="postgres://localhost/mydb") }}
max_connections = {{ env(name="DB_MAX_CONNECTIONS", default="32") }}
pool_timeout = {{ env(name="DB_POOL_TIMEOUT", default="30") }}

[redis]
url = {{ env(name="REDIS_URL", default="redis://localhost:6379") }}
ttl = {{ env(name="REDIS_TTL", default="3600") }}

[logging]
level = {{ env(name="LOG_LEVEL", default="info") }}
format = {{ env(name="LOG_FORMAT", default="json") }}
{% if env(name="DEBUG", default="false") == "true" %}
debug = true
verbose = true
trace_requests = true
{% else %}
debug = false
verbose = false
{% endif %}

[environment]
env = {{ env(name="APP_ENV", default="development") }}
version = {{ env(name="APP_VERSION", default="0.1.0") }}
region = {{ env(name="AWS_REGION", default="us-east-1") }}

[features]
enable_caching = {{ env(name="ENABLE_CACHING", default="true") }}
enable_metrics = {{ env(name="ENABLE_METRICS", default="false") }}
max_upload_size = {{ env(name="MAX_UPLOAD_SIZE", default="10485760") }}
